<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- disabled -->
    <item
        android:drawable="@drawable/btn_action_float_disabled"
        android:state_enabled="false" />

    <!-- pressed -->
    <item
        android:drawable="@drawable/btn_action_float_pressed"
        android:state_enabled="true"
        android:state_pressed="true" />

    <!-- focused -->
    <item
        android:drawable="@drawable/btn_action_float_normal"
        android:state_focused="true" />

    <!-- default -->
    <item android:drawable="@drawable/btn_action_float_normal" />

</selector>